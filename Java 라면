
 
package wkddusws;

import java.nio.charset.MalformedInputException;
import java.util.Scanner;

public class Wkdsuwns {

	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("라면을 꿇여보자!");
		
		System.out.println("가스레인지 앞에 섰다 ");
		
		System.out.println("1 불을 킨다 . 2귀찮다,생라면 ㄱㄱ");
		
		int a = sc.nextInt();
		
		 if (a==1) {
			System.out.println("가스버너가 켜집니다");
			
			System.out.println("물이 끓는다");
			
			System.out.println("1 면- 스프를 넣는다. 2귀찮다 그냥편이점 가야지");
			
			int b=sc.nextInt();
		
			if (b==1) {
				System.out.println("면과  스프를 넣고 2분더 끓였다");
				
				System.out.println("야무지게 멱어야지");
			} else if (b==2) {
				System.out.println("불을 끄고 편이점을 갑니다");
			}else {
				System.out.println("1,2중에 하나만 입력해야 합니다");
			}
		} else if (a==2) {
			System.out.println("생라면 우걱우걱");
			
		}else
			System.out.println("1,2중에 하나만 입력해야 합니다");
		
	}

}
