package dkj;

import java.util.Scanner;

public class KKK {

	public static void main(String[] args) {
		
		
			Scanner sc = new Scanner(System.in);
			int num =0;
			System.out.println("1부터 입혁한 숫자까지의"
					+ "짝수들의 합을 구하는 프로그램이다");
			int a = sc.nextInt();
			// 1~40까지 진행한다. for문
			for(int i=1; i<=a; i++) {			
				if(i % 2 ==0) {
					num+=i;
				}
				
		}

			System.out.println(num);
		
				
		
		
	}
		
}
